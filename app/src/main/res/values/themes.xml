<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 앱 기본 테마(Compose용). 여기선 최소만 둠 -->
    <style name="Theme.Calclab" parent="android:Theme.Light.NoTitleBar">
        <!-- 필요시 앱 전체 배경색 -->
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <!-- ✅ 타이틀바/액션바 완전 제거용(스플래시/로그인/메인에 강제 적용) -->
    <style name="Theme.Calclab.NoBar" parent="android:Theme.Light.NoTitleBar">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowFullscreen">true</item>
    </style>

</resources>

